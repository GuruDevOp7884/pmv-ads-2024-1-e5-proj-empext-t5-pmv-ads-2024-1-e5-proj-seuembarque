<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        @*<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">*@
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="~/css/datepicker/jquery-ui.theme.min.css">
        <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v6.0.0-beta3/css/all.css">
        <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Gill+Sans&display=swap">
        <link rel="stylesheet" href="~/css/formulario.css">
        <link rel="stylesheet" href="~/css/datepicker/autocomplete.css">
        <link rel="stylesheet" href="~/css/datepicker.css">
        <link rel="stylesheet" href="~/css/datepicker/jquery-ui.structure.min.css">
        <link rel="stylesheet" href="~/css/datepicker/jquery-ui.min.css">

        <style>
            .ui-menu{
                z-index:999;
            }
             /* icone calendario */
            .ui-datepicker {
                line-height: 1 !important;
            }

       
            .dataInput {
                position: relative;
            }

            .dataInput div {
                display: inline-block;
            }

            .clearIconIda {
                position: absolute;
                bottom: 0.01rem;
                left: 10.5rem;
                padding-top: 5px;
                cursor: pointer;
            }
            .clearIconVolta{
                position: absolute;
                bottom: 0.01rem;
                right: 3.2rem;
                padding-top: 5px;
                cursor: pointer;
            }
            .dataInput .fa-solid.fa-circle-xmark {
                color: gray;
                /*position: absolute;*/
                top: 74%;
                transform: translateY(-50%);
                pointer-events: none;
            }

            .dataInput .clearIda {
                left: 10.4rem;
            }

            .dataInput .clearVolta {
                right: 3.4rem;
            }

            .dataInput .fas.fa-calendar {
                color: gray;
                position: absolute;
                top: 74%;
                transform: translateY(-50%);
                pointer-events: none;
            }           
            
            .dataInput .calendarIda {
                left: 10.4rem;
            }

            .dataInput .calendarVolta {
                right: 3.4rem;
            }

            .lugarInput div {
                display: inline-block;
            }

            /*opções hospedagem*/
            .option {
                cursor: pointer;
                opacity: 0.7;
            }

            .option-selected {
                background-color: #013d50 !important;
                opacity: 1;
            }

            .disabled {
                cursor: not-allowed;
                opacity: 0.5;
            }



            #dataIda, #dataVolta {
                width: 10rem !important;
            }

            #dropdownMenuButton {
                background-color: #ffffff;
            }

            .dropdown-menu {
                width: 20rem;
            }

            .dropdown-menu label {
                font-size: 20px !important;
            }

            .inputViajantes {
                border: none;
                color: #161616;
                display: inline-block;
                font-size: 1rem;
                font-weight: 700;
                line-height: 1.25rem;
                margin: 0;
                padding: 0.5rem 0rem;
                text-align: center;
                vertical-align: middle;
                width: 30px;
            }

            #subAdulto,
            #addAdulto,
            #subCrianca,
            #addCrianca {
                border-radius: 0.5rem;
                height: 30px;
                width: 30px;
                padding: 0;
            }

            #addAdulto:hover, #subAdulto:hover {
                background-color: rgb(0, 172, 206);
                color: #FFF;
            }

            #addCrianca:hover, #subCrianca:hover{
                background-color: rgb(0, 172, 206);
                color:#FFF !important;
            }

            .btnConfirmarViajantes {
                background-color: rgb(0, 172, 206) !important;            
                border: none;
            }

            .btnConfirmarViajantes:hover {
                background-color: rgb(6 127 151) !important;
            }

            .dropdown .input-group button span, .dropdown .input-group input {
                font-weight: 600;
            }

            .idadeViajante{
                padding-left:10px;
                font-weight: 600;
                 font-size: 16px;
                color: #5a5858;
            }

            #classe{
                width:10rem;
            }

            h3{
                margin-left:20px;
            }

            .expBtn{
                background-color: transparent;
                border: none;
                border-radius: 20px;
                width: 20px;
                height: 20px;
                position: relative;
                top: 2px;
            }
            .expIcone{
                font-size: 20px !important;
                color: white;
                right: 6.5px;
                bottom: 2px;
            }

            .custom-tooltip .tooltip-inner {
                background-color: #545353 !important;
                color: white !important;
                font-size:15px;
            }

            .custom-tooltip .tooltip-arrow::before {
                color: rgb(0, 172, 206) !important;
            }

           /* .toast-container {
                position: fixed;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
                z-index: 9999;
            }*/

            .redirecionar {
                display: flex;
                align-items:center;
                padding: 15px 25px;
                background-color: #25d366;
                color: #fff; 
                text-decoration: none; 
                border-radius: 15px; 
                border: 1px solid #25d366; 
                transition: background-color 0.3s, color 0.3s; 
                top:15px;
                margin-bottom:30px;
            }

            .redirecionar p{
                margin-bottom:0px;
                padding-left:10px;
            }
        
            .redirecionar:hover {
                background-color: #128C7E; 
                border-color: #128C7E; 
            }

            .fa-whatsapp{
                font-size: 1.8rem;
            }

            .inputText::placeholder {
                color: #999;
                opacity:0.6;
            }

          
            /*Checkbox*/
            input[type="checkbox"] {
                transform: scale(1.4);
            }

            @@media screen and (max-width:768px) {
                input[type=checkbox]:before {
                    top: 0.1rem !important;
                    left: 0.1rem !important;
                    transform: scale(1.2);
                    content: "";
                    display: block;
                    position: relative !important;
                    width: 0.8rem;
                    height: 0.8rem;
                    /*top: 0.1rem;*/
                    border: 1px solid #003f53;
                    background-color: rgb(0, 172, 206);
                }

                input[type=checkbox]:checked:before {
                    width: 0.77rem !important;
                    height: 0.77rem !important;
                }
                input[type=checkbox]:checked:after {
                    left: 0.3rem !important;
                }

                body {
                    /*background-color: rgb(0, 216, 237) !important;*/
                    zoom: 0.8;
                    /*max-height: -webkit-fill-available;*/
                }
            }

            input[type=checkbox]:before {
                transform: scale(1.2);
                content: "";
                display: block;
                position: static;
                width: 0.75rem;
                height: 0.75rem;
                /*top: 0.1rem;*/
                border: 1px solid #003f53;
                background-color: rgb(0, 172, 206);
            }

            input[type=checkbox]:checked:before {
                content: "";
                display: block;
                position: absolute;
                width: 0.75rem;
                height: 0.7rem;
                /*top: 0.1rem;*/
                left: 0;
                background-color: #003f53;
            }

            input[type=checkbox]:checked:after {
                content: "";
                display: block;
                width: 0.313rem;
                height: 0.438rem;
                border: solid white;
                border-width: 0 2px 2px 0;
                -ms-transform: rotate(45deg);
                transform: rotate(45deg);
                position: absolute;
                top: 2px;
                left: 0.2rem;
            }
            /*Checkbox fim*/

            /*Scroll*/
            ::-webkit-scrollbar {
                width: 10px;
            }

            ::-webkit-scrollbar-track {
                background: #f1f1f1;
            }

            ::-webkit-scrollbar-thumb {
                background: #888;
                border-radius: 5px;
            }

            ::-webkit-scrollbar-thumb:hover {
                background: #555; /* cor do handle quando hover */
            }
        </style>
    </head>
    <body>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/crypto-js/4.1.1/crypto-js.min.js"></script>
        <script src="~/js/datepicker/external/jquery.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" ></script>
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>  
        <script src="~/js/datepicker/jquery-ui.min.js"></script>
        <script src="~/js/datepicker/datepicker-pt-BR.js"></script>
        <script src="~/js/form.js"></script>
        <script src="~/js/main.js"></script>

       
        <div>
            <div class="toast-container position-fixed  start-50 translate-middle-x p-3">
                <div id="liveToast" class="toast" style="width: auto;" role="alert" aria-live="assertive" aria-atomic="true">
                    <div class="toast-header">
                        <i class="fas fa-times-circle" style="color:red; font-size:28px;"></i>
                        <div class="block p-2 mr-2">
                            <div>
                                <strong class="me-auto titulo" style="font-weight: 700; color: black; font-size: 15px;">Erro</strong>
                            </div>
                            <div class="toast-body" style="color:#6d6c6c; font-size: 14px; font-weight: 700; padding:0px !important;"></div>
                        </div>
                        <button type="button" class="btn-close" style="font-size: 10px; margin-bottom:45px;" data-bs-dismiss="toast" aria-label="Close"></button>
                    </div>

                </div>
            </div>

            @RenderBody()
        </div>     
        <script type="text/javascript">
            $(document).ready(function(){
                const tooltipTriggerList = document.querySelectorAll('[data-bs-toggle="tooltip"]')
                const tooltipList = [...tooltipTriggerList].map(tooltipTriggerEl => new bootstrap.Tooltip(tooltipTriggerEl))
                if(isMobile()){
                    $('.toast-container').addClass('top-0');
                }else{
                    $('.toast-container').addClass('bottom-0');
                }
            });            

           
        </script>
         @RenderSection("Scripts", required: false)
    </body>
</html>